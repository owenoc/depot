<% if notice %>
  <p id="notice"><%= notice %></p>
  <%= button_to 'Empty cart', @cart, method: :delete,
      data: { confirm: 'Are you sure?' } %>
<% end %>

<h2>Your Pragmatic Cart</h2>
<ul>    
  <% @cart.line_items.each do |item| %>
    <li><%= item.product.title %></li>
    <%= item.quantity %> &times;
  <% end %>
</ul>
